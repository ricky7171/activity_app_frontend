    <style>
    #content .container-fluid {
        position: relative;
    }
    #loading-container {
        width: 100%;
        height: 100%;
        position: absolute;
        background-color: #f8f9fc;
        z-index: 999;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: #b3b2b2;
        padding-top: 70px;
    }

    #loading-container .loading-icon,
    .empty-icon {
        font-size: 40px;
    }

    #loading-container .loading-caption,
    .empty-caption {
        font-size: 30px;
    }

    .empty-content {
        width: 100%;
        height: 500px;
        background-color: #f8f9fc;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: #b3b2b2;
    }

    td .empty-content {
        height: 250px;
    }

    #addActivityBtnTop {
        background-color: #4e73df;
    }

    /* Media Gallery CSS */

    .media-content-wrapper img {
        max-width: 100%;
        height: auto;
        vertical-align: middle;
        display: inline-block;
    }

    /* Main CSS */
    .media-content-wrapper > div {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .media-content-wrapper > div > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 5px;
    }

    .media-content-wrapper {
        display: grid;
        grid-gap: 10px;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        grid-auto-rows: 200px;
        grid-auto-flow: dense;
    }
    .media-content-wrapper .wide {
        grid-column: span 2;
    }
    .media-content-wrapper .tall {
        grid-row: span 2;
    }
    .media-content-wrapper .big {
        grid-column: span 2;
        grid-row: span 2;
    }
    .media-content-wrapper .playable {
        position: relative;
    }
    .media-content-wrapper .playable:after {
        display: inline-block;
        width: 50px;
        height: 50px;
        position: absolute;
        content: "";
        background-size: cover;
        background-image: url("data:image/svg+xml,%3Csvg t='1634373579840' fill-opacity='0.7' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='2538' width='200' height='200'%3E%3Cpath d='M374.272 333.312v355.328c0 30.208 20.992 40.448 45.568 26.112l288.768-175.104c25.088-15.872 25.088-40.448 0-54.784L419.84 309.76c-7.68-5.12-14.336-6.656-20.992-6.656-14.336-2.56-24.576 9.216-24.576 30.208zM1024 512c0 282.624-229.376 512-512 512S0 794.624 0 512 229.376 0 512 0s512 229.376 512 512z' p-id='2539'%3E%3C/path%3E%3C/svg%3E");
    }

    .media-content-wrapper .media-content-item {
        cursor: pointer;
    }

    .form-media-wrapper .preview-area {
        width: 100%;
        height: 200px;
        background-color: #ddd;
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
    }

    @media only screen and (max-width: 768px) {
        /* For mobile phones: */
        .media-content-wrapper {
            display: grid;
            grid-gap: 10px;
            grid-template-columns: none;
            grid-auto-rows: 200px;
            grid-auto-flow: dense;
        }
    }

    </style>
</head>

<body id="page-top">
<!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include 'templates/partials/sidebar.njk' %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link rounded-circle">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Report Button (Topbar) -->
                    <div>
                        <a href="#" id="reportBtnTop" class="btn btn-orange btn-link rounded text-white text-lg ml-auto" role="button">Report</a>
                        <a href="/history.html" class="btn btn-link rounded btn-orange text-white text-lg ml-auto" role="button">History</a>
