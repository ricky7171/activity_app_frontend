<script type="text/template" data-template="row-activity-float">
    <div class="col-6 row-activity row-activity-float" style="padding-left: 0; padding-right: 0">
        <div class="d-flex flex-nowrap text-center">
            <div class="input-group input-activity-group">
                ${value_activity_html}
                <div class="input-group-append w-50">
                    <a href="#" class="btn btn-primary w-100 btn-add-value border-0 pt-2" role="button">${title}</a>
                </div>
            </div>
            <div class="changepos-btn-wrapper">
                <i class="btn-up fa fa-caret-left" aria-hidden="true"></i>
                <i class="btn-down fa fa-caret-right" aria-hidden="true"></i>
            </div>
        </div>
    </div>
</script>

<script type="text/template" data-template="row-activity-speedrun">
    <div class="col-6 row-activity row-activity-float" style="padding-left: 0; padding-right: 0">
        <div class="d-flex flex-nowrap text-center">
            <div class="input-group input-activity-group">
                <div class="d-flex speedrun-container" activityId='${activity_id}' style="width:50%">
                    <input type="number" placeholder="h" name="hour" id="hour" class="form-control border bg-white text-center w-50 input-activity-value h-100 pt-2" style="width: 25%">
                    <input type="number" placeholder="m" name="minute" id="minute" class="form-control border bg-white text-center w-50 input-activity-value h-100 pt-2" style="width: 25%">
                    <input type="number" placeholder="s" name="second" id="second" class="form-control border bg-white text-center w-50 input-activity-value h-100 pt-2" style="width: 25%">
                    <input type="number" placeholder="ms" name="millisecond" id="millisecond" class="form-control border bg-white text-center w-50 input-activity-value h-100 pt-2" style="width: 25%">
                </div>
                <div class="input-group-append w-50">
                    <a href="#" class="btn btn-primary w-100 btn-add-value border-0 pt-2" role="button">${title}</a>
                </div>
            </div>
            <div class="changepos-btn-wrapper">
                <i class="btn-up fa fa-caret-left" aria-hidden="true"></i>
                <i class="btn-down fa fa-caret-right" aria-hidden="true"></i>
            </div>
        </div>
    </div>
</script>

<script type="text/template" data-template="row-activity-textfield">
    <div class="row mb-3 row-activity row-activity-textfield">
        <div class="col-12"  style="padding-left: 0; padding-right: 0">
            <div class="d-flex flex-nowrap text-center"> 
                <div class="input-group input-activity-group">
                    <input type="text" class="form-control border border-1 input-activity-value h-100" activityId='${activity_id}' placeholder="${placeholder}" aria-label="">
                    <div class="input-group-append">
                        <button class="btn btn-primary btn-add-value border-0" type="button">${title}</button>
                    </div>
                </div>
                <div class="changepos-btn-wrapper">
                    <i class="btn-up fa fa-caret-up" aria-hidden="true"></i>
                    <i class="btn-down fa fa-caret-down" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</script>

<script type="text/template" data-template="editable-value-activity-template">
    <input class="form-control border border-0 bg-white text-center w-50 input-activity-value h-100 pt-2" activityId='${activity_id}' value='${value}' type="number">
</script>

<script type="text/template" data-template="disabled-value-activity-template">
    <p class="form-control border border-0 bg-gray-200 w-50 input-activity-value h-100 pt-2" activityId='${activity_id}' value='${value}'>${value}</p>
</script>

<script type="text/template" data-template="media-content-template">
    <div class="media-content-item ${className}" data-source='${source}'>
        <img src="${imageSource}" alt="" />
    </div>
</script>
<script type="text/template" data-template="media-detail-youtube-template">
    <iframe width="100%" height="500" src="https://www.youtube.com/embed/${source}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
</script>
<script type="text/template" data-template="media-detail-youtube-template">
    <img src="${source}" alt="" style="width: 100%" />
</script>
<script type="text/template" data-template="media-detail-image-template">
    <img src="${source}" alt="" style="width: 100%" />
</script>
<script type="text/template" data-template="media-detail-video-template">
    <video width="100%" height="500" controls>
        <source src="${source}">
        Your browser does not support the video tag.
    </video>
</script>
<script type="text/template" data-template="media-filter-item">
    <a class="dropdown-item filter-category" data-categoryid="${id}" href="#">${name}</a>
</script>
<script type="text/template" data-template="media-category-option">
    <option value="${id}">${name}</option>
</script>
<script type="text/template" data-template="media-category-list-template">
<li class="list-group-item d-flex justify-content-between" data-category='${dataJson}'>
    <div>
        ${name}
    </div>
    <div class="btn-group">
        <button type="button" class="btn-edit-category btn btn-primary btn-sm"><i class="fa fa-edit"></i></button>
        <button type="button" class="btn-delete-category btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
    </div>
</li>
</script>
<script src="js/app/pages/index.js"></script>
{% endblock footer %}